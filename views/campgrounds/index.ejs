<% layout("./layouts/boilerplate") %>
    <h1 class="mb-4">Campgrounds</h1>
    <% for (let camp of camps) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= camp.images[0].url %>" class="img-fluid" alt="<%= camp.title %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="text-muted">
                            <%= camp.location %>
                        </p>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>